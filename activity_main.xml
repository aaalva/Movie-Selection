<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36dp"
            android:text="List Three Movies!"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textAllCaps="true" >

        </TextView>


        <EditText
            android:id="@+id/first_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Write Movie Title"
            android:textAlignment="center"
            android:layout_marginTop="72dp"
            android:layout_gravity="center_horizontal"
            android:inputType="text"
            android:padding="6dp"  />

        <EditText
            android:id="@+id/second_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Write Movie Title"
            android:textAlignment="center"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:inputType="text"
            android:padding="6dp"  />

        <EditText
            android:id="@+id/third_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Write Movie Title"
            android:textAlignment="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            android:inputType="text"
            android:padding="6dp"  />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="submitChoices"
            android:text="Submit Choice"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="64dp" />

        
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
